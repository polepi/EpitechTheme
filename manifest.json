{
  "manifest_version": 3,
  "name": "EpiTheme",
  "version": "1.0",
  "description": "Loads themes for your Epitech Intra.",
  "host_permissions": [
    "https://intra.epitech.eu/*",
    "https://my.epitech.eu/*",
    "https://api.epitest.eu/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
        {
            "id": "net_rules",
            "enabled": true,
            "path": "header_rules.json"
        }
    ]
  },
  "permissions": [
    "storage",
    "background",
    "tabs",
    "scripting",
    "declarativeNetRequest"
  ],
"background": {
    "service_worker": "core/background.js"
},
"web_accessible_resources": [
  {
    "resources": ["*.css", "Themes/*"],
    "matches": ["<all_urls>"]
  }
],
"content_scripts": [
  {
    "matches": ["https://intra.epitech.eu/*"], 
    "js": ["script.js"],
    "css": ["css/misc.css"],
    "all_frames": true
  },
  {
    "matches": ["https://intra.epitech.eu/*"], 
    "js": ["core/theme_handler.js"],
    "run_at": "document_start",
    "all_frames": true
  },
  {
    "matches": ["https://my.epitech.eu/*"], 
    "js": ["core/mouli_script.js"],
    "all_frames": true
  }
],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/ico16.png",
    "32": "icons/ico32.png",
    "64": "icons/ico64.png"
  }
}